{{>layouts/header}}

<table class="table">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    {{#articleList}} <!--articleList에 있는 데이터 수만큼 이 부분을 반복 실행-->
        <tr>
            <th>{{id}}</th>
            <td><a href="/articles/{{id}}">{{title}}</a></td> <!-- <목록 페이지> -> <상세 페이지> 이동하기 -->
            <th>{{content}}</th>
        </tr>
    {{/articleList}}
    </tbody>
</table>

<a href="/articles/new">New Article</a> <!--새로운 글 작성 링크-->

{{>layouts/footer}}